<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sayan.android_project.weight">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">
        <EditText
            android:layout_alignParentLeft="true"
            android:id="@+id/weightValue"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="Enter the value"
            android:textAllCaps="true"
            android:inputType="numberDecimal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:maxLength="6"/>
        <Spinner
            android:id="@+id/dropDown"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignTop="@id/weightValue"
            android:layout_toRightOf="@id/weightValue">
        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gm"
            android:text="0"
            android:textSize="20dp"
            android:padding="25sp"
            android:maxLength="8"
            android:lines="1"
            android:layout_alignTop="@+id/gUnit"
            android:layout_alignLeft="@+id/kg"
            android:layout_alignStart="@+id/kg" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kg"
            android:text="0"
            android:textSize="20dp"
            android:maxLength="8"
            android:padding="25sp"
            android:lines="1"
            android:layout_below="@+id/gm"
            android:layout_alignLeft="@+id/lb"
            android:layout_alignStart="@+id/lb" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lb"
            android:text="0"
            android:textSize="20dp"
            android:maxLength="8"
            android:padding="25sp"
            android:lines="1"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/kgUnit"
            android:layout_toStartOf="@+id/kgUnit" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="@android:color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gUnit"
            android:text= "g"
            android:textStyle="bold"
            android:textSize="22dp"
            android:padding="25sp"
            android:layout_below="@id/dropDown"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kgUnit"
            android:text="Kg"
            android:textStyle="bold"
            android:textSize="22dp"
            android:padding="25sp"
            android:layout_below="@id/gUnit"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/poundUnit"
            android:text="lb"
            android:textStyle="bold"
            android:textSize="22dp"
            android:padding="25sp"
            android:layout_below="@id/kgUnit"
            android:layout_centerHorizontal="true"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Convert"
            android:id="@+id/convert"
            android:onClick="convert"
            android:layout_alignBottom="@+id/weightValue"
            android:layout_toRightOf="@+id/kgUnit"
            android:layout_toEndOf="@+id/kgUnit"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp" />

    </RelativeLayout>
</ScrollView>
