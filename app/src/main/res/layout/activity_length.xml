<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.sayan.android_project.lengthActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">
        <EditText
            android:layout_alignParentLeft="true"
            android:id="@+id/lengthValue"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="Enter the value"
            android:textAllCaps="true"
            android:inputType="numberDecimal"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />
        <Spinner
            android:id="@+id/dropDown"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignTop="@id/lengthValue"
            android:layout_toRightOf="@id/lengthValue">
        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/km"
            android:text="0"
            android:textSize="20dp"
            android:padding="25sp"
            android:layout_below="@id/dropDown"
            android:layout_alignLeft="@id/lengthValue"
            android:layout_alignStart="@id/lengthValue" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/m"
            android:text="0"
            android:textSize="20dp"
            android:padding="25sp"
            android:layout_below="@id/km"
            android:layout_alignLeft="@id/lengthValue"
            android:layout_alignStart="@id/lengthValue" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cm"
            android:text="0"
            android:textSize="20dp"
            android:padding="25sp"
            android:layout_below="@id/m"
            android:layout_alignLeft="@id/lengthValue"
            android:layout_alignStart="@id/lengthValue" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:background="@android:color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/kmUnit"
            android:text="km"
            android:textStyle="bold"
            android:textSize="22dp"
            android:padding="25sp"
            android:layout_below="@id/dropDown"
            android:layout_toRightOf="@id/km" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mUnit"
            android:text="m"
            android:textStyle="bold"
            android:textSize="22dp"
            android:padding="25sp"
            android:layout_below="@id/km"
            android:layout_toRightOf="@id/m"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cmUnit"
            android:text="cm"
            android:textStyle="bold"
            android:textSize="22dp"
            android:padding="25sp"
            android:layout_below="@id/m"
            android:layout_toRightOf="@id/cm"/>
    </RelativeLayout>
</ScrollView>